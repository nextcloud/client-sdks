{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "skipIgnore": true,
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}